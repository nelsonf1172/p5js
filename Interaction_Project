<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
      var rCenterX
      var rCEnterY
      var gHeight
      var cHeight
      var cHeight2
      var skyG
      var skyB

        function setup() {
          createCanvas(800,600)
          
          rCenterX=width/2
          rCenterY=3*height/4-50
          gHeight=3*height/4
          cHeight=height/6
          cheight2=150
          skyG=200
          skyB=255
        }

        function draw() {
          background(0,skyG,255)
          
          fill(0,200,0)
          rectMode(CORNER)
          rect(0,gHeight,width,height) //ground
          
          //cloud1
          fill(255, 255, 255);
          noStroke()
          ellipse(width/8,cHeight,100,50)
          ellipse(width/8+80,cHeight,100,50)
          ellipse(width/8+160,cHeight,100,50)
          //cloud2
          ellipse(5*width/8,cHeight,50,25)
          ellipse(5*width/8+40,cHeight,50,25)
          ellipse(5*width/8+80,cHeight,50,25)
          
          //rocket
          fill(180)
          rectMode(CENTER)
          rect(rCenterX,rCenterY,100,150)
          fill(150,200,255)
          ellipse(rCenterX,rCenterY,50)//window
          fill(220,50,50)
          triangle(rCenterX-50,rCenterY-75,rCenterX+50,rCenterY-75,rCenterX,rCenterY-150)//top
          triangle(rCenterX-50,rCenterY+75,rCenterX-20,rCenterY+75,rCenterX-50,rCenterY+120)//Base L
          triangle(rCenterX+50,rCenterY+75,rCenterX+20,rCenterY+75,rCenterX+50,rCenterY+120)//Base R
          
          //UFO
          fill(100)
          ellipse(mouseX,mouseY+40,100,50)
          fill(200)
          ellipse(mouseX,mouseY,200,100)
          fill(150,200,255)
          ellipse(mouseX,mouseY-40,100,50)
          
          //rocket positioning
          if (keyIsDown(LEFT_ARROW) | keyIsDown(65)) {
            rCenterX -=5
          }
          if (keyIsDown(RIGHT_ARROW) | keyIsDown(68)) {
            rCenterX +=5
          }
          if (keyIsDown(UP_ARROW) | keyIsDown(87)) {
            rCenterY -=5
            fill(255,0,0)
        triangle(rCenterX-20,rCenterY+75,rCenterX+20,rCenterY+75,rCenterX,rCenterY+120)
        fill(255,255,0)
        triangle(rCenterX-15,rCenterY+75,rCenterX+15,rCenterY+75,rCenterX,rCenterY+115)
          }
          
          if (keyIsDown(DOWN_ARROW) | keyIsDown(83)) {
            rCenterY +=5
          }
          
        }
      
      function mouseDragged() {
        gHeight ++
        cHeight +=0.5
        skyG -=0.1
        
        fill(255,0,0)
        triangle(rCenterX-20,rCenterY+75,rCenterX+20,rCenterY+75,rCenterX,rCenterY+120)
        fill(255,255,0)
        triangle(rCenterX-15,rCenterY+75,rCenterX+15,rCenterY+75,rCenterX,rCenterY+115)
        
      }

    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/nelsonf1172/p5js/blob/master/Interaction_Project.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


